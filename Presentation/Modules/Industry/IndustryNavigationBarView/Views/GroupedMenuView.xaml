<UserControl  x:Class="Aksl.Modules.IndustryNavigationBar.Views.GroupedMenuView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:views="clr-namespace:Aksl.Modules.IndustryNavigationBar.Views"
              mc:Ignorable="d"
              d:DesignHeight="450"
              d:DesignWidth="800">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="headerBackground"
                             StartPoint="0.5,0"
                             EndPoint="0.5,1">
            <GradientStop Color="#66000088"
                          Offset="0" />
            <GradientStop Color="#BB000088"
                          Offset="1" />
        </LinearGradientBrush>

        <DataTemplate x:Key="headerTemplate">
            <views:MenuItemHeader  x:Name="menuHeaderView"
                                   Title="{Binding HeaderTitle}" />
        </DataTemplate>

        <DataTemplate x:Key="contentTemplate">
            <views:MenuContentView x:Name="menuContentView" />
        </DataTemplate>
    </UserControl.Resources>

    <Expander IsExpanded="True"
              ExpandDirection="Down"
              Background="{StaticResource headerBackground}">
        <Expander.Header>
            <views:MenuItemHeader x:Name="menuItemHeader"
                                  Title="{Binding HeaderTitle}" />
        </Expander.Header>
        <Expander.Content>
            <views:MenuContentView x:Name="menuContentView"
                                   DataContext="{Binding MenuContent}" />
        </Expander.Content>
    </Expander>

</UserControl>
