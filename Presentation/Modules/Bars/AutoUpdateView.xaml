<UserControl x:Class="Aksl.Modules.LiveCharts.Bars.Views.AutoUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:views="clr-namespace:Aksl.Modules.LiveCharts.Bars.Views"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="900"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>

    </UserControl.Resources>

    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <Button x:Name="setNewColorButton"
                    Content="Set new color">
                <ei:Interaction.Triggers>
                    <ei:EventTrigger EventName="Click">
                        <ei:CallMethodAction TargetObject="{Binding DataContext,ElementName=setNewColorButton}"
                                             MethodName="SetNewColorClick" />
                    </ei:EventTrigger>
                </ei:Interaction.Triggers>
            </Button>
            <Button x:Name="togglePositionButton"
                    Content="Toggle Position">
                <ei:Interaction.Triggers>
                    <ei:EventTrigger EventName="Click">
                        <ei:CallMethodAction TargetObject="{Binding DataContext,ElementName=togglePositionButton}"
                                             MethodName="TogglePositionClick" />
                    </ei:EventTrigger>
                </ei:Interaction.Triggers>
            </Button>
            <!--<Button Margin="6"
                        Command="{Binding SetNewColorCommand}">Set new color</Button>
                <Button Margin="6"
                        Command="{Binding TogglePositionCommand}">Toggle Position</Button>-->
        </StackPanel>

        <lvc:CartesianChart Grid.Row="1"
                            Series="{Binding Series}"
                            XAxes="{Binding XAxes}"
                            YAxes="{Binding YAxes}">
        </lvc:CartesianChart>
    </Grid>

</UserControl>
