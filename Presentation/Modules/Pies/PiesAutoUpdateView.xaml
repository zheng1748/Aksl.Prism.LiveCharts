<UserControl x:Class="Aksl.Modules.LiveCharts.Pies.Views.PiesAutoUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="900"
             xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>

    </UserControl.Resources>

    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <!--<Button Margin="6"
                    Command="{Binding AddSeriesCommand}">Add Series</Button>
            <Button Margin="6"
                    Command="{Binding RemoveSeriesCommand}">Remove Series</Button>
            <Button Margin="6"
                    Command="{Binding UpdateAllCommand}">Update all</Button>-->
            <!--<Button Margin="6"
                    Click="Button_Click">Constant changes</Button>-->
            <Button x:Name="addSeriesButton"
                    Margin="6"
                    Content="Add Series">
                <ei:Interaction.Triggers>
                    <ei:EventTrigger EventName="Click">
                        <ei:CallMethodAction TargetObject="{Binding DataContext,ElementName=addSeriesButton}"
                                             MethodName="AddSeries" />
                    </ei:EventTrigger>
                </ei:Interaction.Triggers>
            </Button>
            <Button x:Name="removeSeriesButton"
                    Margin="6"
                    Content="Remove Series">
                <ei:Interaction.Triggers>
                    <ei:EventTrigger EventName="Click">
                        <ei:CallMethodAction TargetObject="{Binding DataContext,ElementName=removeSeriesButton}"
                                             MethodName="RemoveSeries" />
                    </ei:EventTrigger>
                </ei:Interaction.Triggers>
            </Button>
            <Button x:Name="updateAllButton"
                    Margin="6"
                    Content="Update All">
                <ei:Interaction.Triggers>
                    <ei:EventTrigger EventName="Click">
                        <ei:CallMethodAction TargetObject="{Binding DataContext,ElementName=updateAllButton}"
                                             MethodName="UpdateAll" />
                    </ei:EventTrigger>
                </ei:Interaction.Triggers>
            </Button>
            <Button x:Name="constantchangesSeries"
                    Margin="6"
                    Content="Constant changes">
                <ei:Interaction.Triggers>
                    <ei:EventTrigger EventName="Click">
                        <ei:CallMethodAction TargetObject="{Binding DataContext,ElementName=constantchangesSeries}"
                                             MethodName="ConstantChangesClick" />
                    </ei:EventTrigger>
                </ei:Interaction.Triggers>
            </Button>
        </StackPanel>
        <lvc:PieChart Grid.Row="1"
                      Series="{Binding Series}"></lvc:PieChart>
    </Grid>
</UserControl>
